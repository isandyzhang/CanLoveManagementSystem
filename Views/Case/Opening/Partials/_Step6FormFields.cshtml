@model CanLove_Backend.Domain.Case.ViewModels.Opening.EmotionalEvaluationVM

<!-- 評估說明 -->
<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-info">
            <h6 class="alert-heading">
                <i class="fas fa-info-circle me-2"></i>評估說明
            </h6>
            <p class="mb-0">請根據您對兒少的觀察，針對以下每個問題進行評分。評分標準：<strong>1分 = 完全不符合</strong>，<strong>2分 = 部分符合</strong>，<strong>3分 = 完全符合</strong></p>
        </div>
    </div>
</div>

<!-- EQ 問題 1 -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 bg-light">
            <div class="card-body">
                <h6 class="card-title text-primary mb-3">
                    <i class="fas fa-question-circle me-2"></i>問題 1
                </h6>
                <p class="card-text mb-3">@Html.DisplayNameFor(model => model.EqQ1)</p>
                <div class="row">
                    <div class="col-md-6">
                        <select asp-for="EqQ1" class="input" required form-mode="@Model.Mode" locked-when="ReadOnly,Review">
                            <option value="">請選擇評分</option>
                            <option value="1">1分 - 完全不符合</option>
                            <option value="2">2分 - 部分符合</option>
                            <option value="3">3分 - 完全符合</option>
                        </select>
                        <span asp-validation-for="EqQ1" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

