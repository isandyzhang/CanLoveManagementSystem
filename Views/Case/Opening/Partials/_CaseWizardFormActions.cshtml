@model CanLove_Backend.Domain.Case.ViewModels.Opening.ICaseWizardVM
@using CanLove_Backend.Application.ViewModels.Case.Basic
@using CanLove_Backend.Domain.Case.ViewModels.Opening

@{
    var step = Model.CurrentStep;
    var mode = Model.Mode;
    var caseId = Model.CaseId;

    // 根據導航上下文決定使用哪個 action 和 controller
    var navigationContext = ViewData["NavigationContext"] as string ?? "Create";
    var (actionName, controllerName) = navigationContext switch
    {
        "Review" => ("Review", "CaseOpeningReview"),
        "ReadOnly" => ("View", "CaseOpeningQuery"),
        "Edit" => ("Edit", "CaseOpeningCreateEdit"),
        _ => ("Create", "CaseOpeningCreateEdit")  // Create
    };

    // 步驟名稱映射
    var stepNames = new Dictionary<int, string>
    {
        { 1, "CaseDetail" },
        { 2, "SocialWorkerContent" },
        { 3, "EconomicStatus" },
        { 4, "HealthStatus" },
        { 5, "AcademicPerformance" },
        { 6, "EmotionalEvaluation" },
        { 7, "FinalAssessment" }
    };
    
    string StepHref(int s)
    {
        if (stepNames.ContainsKey(s))
        {
            return Url.Action(actionName, controllerName, new { caseId = caseId, step = stepNames[s] }) ?? "#";
        }
        // 向後兼容：如果找不到映射，使用舊的 Step 方法
        return Url.Action($"Step{s}", controllerName, new { caseId = caseId, mode = mode }) ?? "#";
    }
}

<div class="mt-6 flex flex-col md:flex-row md:justify-between items-stretch md:items-center gap-3">
    <div class="flex gap-3 w-full md:w-auto">
        @if (step > 1)
        {
            <a href="@StepHref(step - 1)" class="btn btn--secondary w-full md:w-auto">
                <i class="fas fa-arrow-left me-1"></i>返回上一步
            </a>
        }
        else if (mode == CaseFormMode.Review)
        {
            <a href="@Url.Action("Review", "CaseOpeningReview")" class="btn btn--secondary w-full md:w-auto">
                <i class="fas fa-arrow-left me-1"></i>返回審核頁
            </a>
        }
        else if (mode == CaseFormMode.ReadOnly)
        {
            <a href="@Url.Action("Query", "CaseOpeningQuery")" class="btn btn--secondary w-full md:w-auto">
                <i class="fas fa-arrow-left me-1"></i>返回查詢頁
            </a>
        }
    </div>

    <div class="flex flex-col md:flex-row gap-3 w-full md:w-auto">
        @if (mode == CaseFormMode.Create)
        {
            if (step < 7)
            {
                <button type="submit" class="btn w-full md:w-auto">
                    <i class="fas fa-save me-1"></i>儲存並繼續
                </button>
                <a asp-controller="CaseBasicQuery" asp-action="Query" class="btn btn--secondary w-full md:w-auto">
                    <i class="fas fa-times me-1"></i>取消
                </a>
            }
            else
            {
                <input type="hidden" name="SubmitAction" value="Submit" />
                <button type="submit" class="btn w-full md:w-auto">
                    <i class="bi bi-check-circle me-1"></i>提交審閱
                </button>
                <a asp-controller="CaseBasicQuery" asp-action="Query" class="btn btn--secondary w-full md:w-auto">
                    <i class="fas fa-times me-1"></i>取消
                </a>
            }
        }
        else if (mode == CaseFormMode.Review)
        {
            if (step < 7)
            {
                <a href="@StepHref(step + 1)" class="btn w-full md:w-auto">
                    下一步<i class="fas fa-arrow-right ms-1"></i>
                </a>
            }
            else
            {
                <!-- 使用隱藏欄位保存 SubmitAction，避免因防重複提交腳本禁用按鈕而遺失值 -->
                <input type="hidden" name="SubmitAction" value="" />
                <button type="submit"
                        class="btn bg-green-400 hover:bg-green-500 text-white w-full md:w-auto"
                        onclick="this.form.SubmitAction.value='Approve';">
                    <i class="bi bi-check-circle me-1"></i>通過
                </button>
                <button type="submit"
                        class="btn bg-red-400 hover:bg-red-500 text-white w-full md:w-auto"
                        onclick="this.form.SubmitAction.value='Reject';">
                    <i class="bi bi-x-circle me-1"></i>駁回
                </button>
            }
        }
        else if (mode == CaseFormMode.ReadOnly)
        {
            if (step < 7)
            {
                <a href="@StepHref(step + 1)" class="btn w-full md:w-auto">
                    下一步<i class="fas fa-arrow-right ms-1"></i>
                </a>
            }
        }
    </div>
</div>


