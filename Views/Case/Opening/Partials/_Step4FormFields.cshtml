@model CanLove_Backend.Domain.Case.ViewModels.Opening.HealthStatusVM

<!-- 照顧者基本資訊 -->
<div class="row mb-4">
    <div class="col-12">
        <h6 class="text-primary border-b border-border pb-2 mb-3">
            <i class="fas fa-user me-2"></i>照顧者基本資訊
        </h6>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="CaregiverRoleValueId" class="block text-lg font-medium mb-2 text-slate-900">照顧者角色 <span class="text-red-500">*</span></label>
            <select asp-for="CaregiverRoleValueId" class="input" required form-mode="@Model.Mode" disabled-when="ReadOnly">
                <option value="">請選擇照顧者角色</option>
                @if (Model.CaregiverRoleOptions != null)
                {
                    @foreach (var option in Model.CaregiverRoleOptions)
                    {
                        <option value="@option.OptionValueId">@option.ValueName</option>
                    }
                }
            </select>
            <span asp-validation-for="CaregiverRoleValueId" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="CaregiverName" class="block text-lg font-medium mb-2 text-slate-900">照顧者姓名</label>
            <input asp-for="CaregiverName" class="input" placeholder="請輸入照顧者姓名" form-mode="@Model.Mode" readonly-when="ReadOnly" />
            <span asp-validation-for="CaregiverName" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="IsPrimary" class="block text-lg font-medium mb-2 text-slate-900">是否主要照顧者</label>
            <select asp-for="IsPrimary" class="input" form-mode="@Model.Mode" disabled-when="ReadOnly">
                <option value="">請選擇</option>
                <option value="true">是</option>
                <option value="false">否</option>
            </select>
            <span asp-validation-for="IsPrimary" class="text-red-600 text-sm"></span>
        </div>
    </div>
</div>

<!-- 照顧者健康評估 -->
<div class="row mb-4">
    <div class="col-12">
        <h6 class="text-primary border-b border-border pb-2 mb-3">
            <i class="fas fa-user-md me-2"></i>照顧者健康評估
        </h6>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="EmotionalExpressionRating" class="block text-lg font-medium mb-2 text-slate-900">情緒表現分數</label>
            <select asp-for="EmotionalExpressionRating" class="input" form-mode="@Model.Mode" disabled-when="ReadOnly">
                <option value="">請選擇分數</option>
                <option value="1">1分 - 非常不穩定</option>
                <option value="2">2分 - 不穩定</option>
                <option value="3">3分 - 穩定</option>
                <option value="4">4分 - 非常穩定</option>
            </select>
            <span asp-validation-for="EmotionalExpressionRating" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="EmotionalExpressionNote" class="block text-lg font-medium mb-2 text-slate-900">情緒表現說明</label>
            <input asp-for="EmotionalExpressionNote" class="input" placeholder="請輸入情緒表現說明" form-mode="@Model.Mode" readonly-when="ReadOnly" />
            <span asp-validation-for="EmotionalExpressionNote" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="HealthStatusRating" class="block text-lg font-medium mb-2 text-slate-900">身體健康分數</label>
            <select asp-for="HealthStatusRating" class="input" form-mode="@Model.Mode" disabled-when="ReadOnly">
                <option value="">請選擇分數</option>
                <option value="1">1分 - 非常差</option>
                <option value="2">2分 - 差</option>
                <option value="3">3分 - 好</option>
                <option value="4">4分 - 非常好</option>
            </select>
            <span asp-validation-for="HealthStatusRating" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="HealthStatusNote" class="block text-lg font-medium mb-2 text-slate-900">身體健康說明</label>
            <input asp-for="HealthStatusNote" class="input" placeholder="請輸入身體健康說明" form-mode="@Model.Mode" readonly-when="ReadOnly" />
            <span asp-validation-for="HealthStatusNote" class="text-red-600 text-sm"></span>
        </div>
    </div>
</div>

