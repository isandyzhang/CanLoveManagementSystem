<!-- 備註 -->
<div class="row mb-4">
    <div class="col-12">
        <h6 class="border-b border-border pb-2 mb-3 font-semibold text-orange-400">
            <i class="fas fa-sticky-note me-2"></i>備註
        </h6>
    </div>
    <div class="col-12 pl-8">
        <div class="mb-3">
            <label asp-for="Note" class="block text-lg font-medium mb-2 text-slate-900">備註 <small class="block text-slate-500">note（可空，NVARCHAR(1000)）</small></label>
            <textarea asp-for="Note" class="input pl-5" rows="4" placeholder="請輸入備註資訊" form-mode="@Model.Mode" readonly-when="ReadOnly"></textarea>
