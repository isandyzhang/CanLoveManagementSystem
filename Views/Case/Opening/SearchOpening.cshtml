@{
    ViewData["Title"] = "查詢個案 - 開案紀錄表";
    ViewData["Breadcrumbs"] = new List<(string Text, string Url)>
    {
        ("個案管理", Url.Action("Query", "CaseBasic") ?? string.Empty),
        ("查詢個案", Url.Action("Query", "CaseBasic") ?? string.Empty),
        ("開案紀錄表", string.Empty)
    };
}

<div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1400px] mx-auto">
        @{ ViewBag.CurrentPage = "Search"; ViewBag.CurrentTab = "CaseOpening"; }
        <partial name="~/Views/Shared/Partials/_CaseTabs.cshtml" />
        <div class="card bg-white dark:bg-slate-900 shadow-card-lg border rounded-xl border-orange-400 dark:border-slate-700">
            <!-- 頂部色塊樣式（與個案基本資料表一致，但使用橘色系） -->
            <div class="px-6 py-4 rounded-t-xl flex items-center justify-between bg-orange-50">
                <span class="inline-flex items-center gap-3 text-2xl font-bold text-slate-700">
                    <i class="bi bi-card-text"></i>
                    開案紀錄表
                </span>
            </div>
            <div class="px-6 py-6">
                <p class="text-slate-600 dark:text-slate-400 mb-4">搜尋個案以查看開案紀錄</p>
                @{
                    ViewBag.Mode = "ReadOnly";
                    ViewBag.TargetAction = "Query";
                    ViewBag.TargetController = "CaseOpening";
                    ViewBag.AutoLoad = true;
                }
                <partial name="~/Views/Shared/Partials/_SearchCase.cshtml" />
            </div>
        </div>
    </div>
</div>

