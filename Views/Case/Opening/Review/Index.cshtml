@model IEnumerable<CanLove_Backend.Domain.Case.Models.Opening.CaseOpening>
@{
    ViewData["Title"] = "個案審核 - 開案紀錄表";
    var modelCount = Model?.Count() ?? 0;
    
    // 自訂麵包屑：個案管理 > 個案審核
    ViewData["Breadcrumbs"] = new List<(string Text, string Url)>
    {
        ("個案管理", Url.Action("Query", "CaseBasic") ?? string.Empty),
        ("個案審核", Url.Action("Review", "CaseOpeningReview") ?? string.Empty)
    };

}

<div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1400px] mx-auto">
        @{ ViewBag.CurrentPage = "Review"; ViewBag.CurrentTab = "CaseOpening"; }
        <partial name="~/Views/Shared/Partials/_CaseFormTabs.cshtml" />
        
        <div class="mb-2 text-sm text-slate-600 dark:text-slate-400">共找到 @modelCount 筆待審項目</div>

        @{
            if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null || TempData["WarningMessage"] != null || TempData["InfoMessage"] != null)
            {
                <partial name="~/Views/Shared/Partials/_AlertMessage.cshtml" />
            }
        }

        <!-- 資料列表（使用公版 _OpeningListTable） -->
        @{
            ViewBag.TableMode = "Review";
            ViewBag.ShowActions = false;
            ViewBag.OnRowClick = "viewOpeningReview";
        }
        <partial name="~/Views/Case/Opening/Partials/_OpeningListTable.cshtml" model="Model" />
    </div>
</div>

@section Scripts {
    <script>
        // 查看開案審核詳細資料（導向 ReviewItem）
        function viewOpeningReview(caseId) {
            if (caseId) {
                window.location.href = '@Url.Action("ReviewItem", "CaseOpeningReview")?id=' + encodeURIComponent(caseId);
            }
        }
    </script>
}


