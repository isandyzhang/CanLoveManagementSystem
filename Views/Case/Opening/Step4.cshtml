@model CanLove_Backend.Domain.Case.ViewModels.Opening.HealthStatusVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // 根據導航上下文動態設置標題和麵包屑
    var navigationContext = ViewData["NavigationContext"] as string ?? "Create";
    var breadcrumbParent = ViewData["BreadcrumbParent"] as string ?? "新增個案";
    var breadcrumbParentUrl = ViewData["BreadcrumbParentUrl"] as string ?? (Url.Action("Create", "CaseBasic") ?? string.Empty);
    var currentPageTitle = navigationContext switch
    {
        "Review" => "審核開案紀錄表",
        "ReadOnly" => "查看開案紀錄表",
        "Edit" => "編輯開案紀錄表",
        _ => "開案紀錄表"
    };
    
    ViewData["Title"] = currentPageTitle;
    ViewData["Breadcrumbs"] = new List<(string Text, string Url)>
    {
        ("個案管理", Url.Action("Query", "CaseBasic") ?? string.Empty),
        (breadcrumbParent, breadcrumbParentUrl),
        (currentPageTitle, string.Empty)
    };
}

<div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1400px] mx-auto">
        <div class="w-full">
            @{ 
                ViewBag.CurrentPage = navigationContext switch
                {
                    "Review" => "Review",
                    "ReadOnly" => "Query",
                    "Edit" => "Query",
                    _ => "Create"
                };
                ViewBag.CurrentTab = "CaseOpening"; 
            }
            <partial name="~/Views/Shared/Partials/_CaseFormTabs.cshtml" />


            @{
                ViewBag.CurrentStep = 4;
                ViewBag.CaseId = Model.CaseId;
                ViewBag.Mode = Model.Mode;
            }
            
            <!-- 導航分頁和進度條 -->
            @await Html.PartialAsync("~/Views/Case/Opening/_WizardNavigation.cshtml")

            <!-- 表單 -->
            <form asp-action="Step4" method="post" class="needs-validation prevent-double-submit" novalidate>
                <div class="card bg-white dark:bg-slate-900 rounded-xl shadow-card-lg border border-orange-400 dark:border-slate-700">
                    <div class="px-6 py-4 mb-5 flex items-center justify-between bg-orange-50 rounded-t-xl">
                        <span class="inline-flex items-center gap-3 text-2xl font-bold text-slate-800">
                            <i class="bi bi-card-text"></i>
                            健康狀況評估
                        </span>
                        <partial name="~/Views/Shared/Partials/_CurrentCaseInfo.cshtml" />
                    </div>
                    <div class="px-6 py-6">
                                <partial name="~/Views/Shared/Partials/_ValidationSummary.cshtml" model="ViewData.ModelState" />
                                <!-- 隱藏欄位 -->
                                <input asp-for="CaseId" type="hidden" />
                                <input asp-for="Mode" type="hidden" />
                                <input asp-for="CaregiverId" type="hidden" />

                                <partial name="~/Views/Case/Opening/Partials/_Step4FormFields.cshtml" model="Model" />

                                <partial name="~/Views/Case/Opening/Partials/_CaseWizardFormActions.cshtml" model="Model" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/form-validation-notification.js" asp-append-version="true"></script>
    <script>
        // 表單驗證（使用統一的驗證通知）
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                            
                            // 顯示驗證錯誤通知
                            if (typeof showValidationError === 'function') {
                                showValidationError('請填寫所有必填欄位後再提交');
                            }
                            
                            // 聚焦到第一個無效欄位
                            const firstInvalid = form.querySelector(':invalid');
                            if (firstInvalid) {
                                firstInvalid.focus();
                                firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
                            }
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}


