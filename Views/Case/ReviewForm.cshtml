@model CanLove_Backend.Data.Models.Core.Case
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>個案基本資料</title>
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CanLove_Backend.styles.css" asp-append-version="true" />
</head>
<body>
<div class="p-4">
    <h3 class="text-xl font-semibold mb-3 text-slate-900">個案基本資料</h3>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-3 p-2 rounded border border-green-300 bg-green-50 text-green-800">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="UpdateBasic" asp-controller="Case" method="post" class="space-y-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CaseId" />

        <div>
            <label class="block text-sm text-slate-700 mb-1">姓名</label>
            <input asp-for="Name" class="form-input w-full" />
        </div>

        <div class="flex gap-3">
            <div class="flex-1">
                <label class="block text-sm text-slate-700 mb-1">性別</label>
                <select asp-for="Gender" class="form-select w-full">
                    <option value="">未設定</option>
                    <option value="M">男</option>
                    <option value="F">女</option>
                    <option value="O">其他</option>
                </select>
            </div>
            <div class="flex-1">
                <label class="block text-sm text-slate-700 mb-1">出生日期</label>
                <input asp-for="BirthDate" type="date" class="form-input w-full" />
            </div>
        </div>

        <div class="flex gap-3">
            <div class="flex-1">
                <label class="block text-sm text-slate-700 mb-1">電話</label>
                <input asp-for="Phone" class="form-input w-full" />
            </div>
            <div class="flex-1">
                <label class="block text-sm text-slate-700 mb-1">Email</label>
                <input asp-for="Email" class="form-input w-full" />
            </div>
        </div>

        <div>
            <label class="block text-sm text-slate-700 mb-1">住址</label>
            <input asp-for="Address" class="form-input w-full" />
        </div>

        <div class="flex gap-3">
            <div class="flex-1">
                <label class="block text-sm text-slate-700 mb-1">城市ID</label>
                <input asp-for="CityId" type="number" class="form-input w-full" />
            </div>
            <div class="flex-1">
                <label class="block text-sm text-slate-700 mb-1">區域ID</label>
                <input asp-for="DistrictId" type="number" class="form-input w-full" />
            </div>
            <div class="flex-1">
                <label class="block text-sm text-slate-700 mb-1">學校ID</label>
                <input asp-for="SchoolId" type="number" class="form-input w-full" />
            </div>
        </div>

        <div class="pt-2">
            <button type="submit" class="badge-pill bg-primary text-white">儲存</button>
        </div>
    </form>
</div>
</body>
</html>
