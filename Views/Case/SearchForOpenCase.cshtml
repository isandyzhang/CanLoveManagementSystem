@{
    ViewData["Title"] = "新增開案紀錄表";
}

<div class="max-w-7xl mx-auto p-8 bg-slate-50">
    <div class="max-w-4xl mx-auto">
        <div class="card bg-white dark:bg-white rounded-xl shadow-card-lg border-0">
            <div class="px-6 py-6 border-b border-border">
                <h3 class="text-2xl font-semibold leading-tight mb-2 text-slate-900">
                    <i class="bi bi-search me-1"></i>新增開案紀錄表
                </h3>
                <p class="text-slate-500 text-sm mb-0">請輸入個案編號、姓名或電話號碼進行搜尋</p>
            </div>
            <div class="px-6 py-6">
                <!-- 搜尋輸入框 -->
                <div class="mb-6">
                    <label for="searchInput" class="block text-lg font-medium mb-2 text-slate-900">
                        搜尋條件
                        <small class="block text-slate-500 text-sm font-normal">支援模糊搜尋：個案編號、姓名、電話號碼</small>
                    </label>
                    <div class="relative">
                        <input 
                            type="text" 
                            id="searchInput" 
                            class="input w-full pl-10 pr-4"
                            placeholder="請輸入個案編號、姓名或電話號碼..."
                            autocomplete="off" />
                        <i class="bi bi-search absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400"></i>
                        <div id="searchLoading" class="absolute right-3 top-1/2 transform -translate-y-1/2 hidden">
                            <i class="bi bi-arrow-repeat animate-spin text-primary"></i>
                        </div>
                    </div>
                </div>

                <!-- 搜尋結果 -->
                <div id="searchResults" class="hidden">
                    <div class="mb-4">
                        <h4 class="text-lg font-medium text-slate-900">搜尋結果</h4>
                        <p id="resultCount" class="text-sm text-slate-500"></p>
                    </div>
                    <div id="resultsList" class="space-y-3">
                        <!-- 結果會動態插入這裡 -->
                    </div>
                </div>

                <!-- 空結果提示 -->
                <div id="noResults" class="hidden">
                    <div class="text-center py-10 text-slate-500">
                        <i class="bi bi-inbox text-slate-400" style="font-size: 3rem;"></i>
                        <h4 class="mt-3 text-slate-900">找不到符合的個案</h4>
                        <p class="text-slate-600">請嘗試其他搜尋關鍵字</p>
                    </div>
                </div>

                <!-- 初始提示 -->
                <div id="initialPrompt">
                    <div class="text-center py-10 text-slate-500">
                        <i class="bi bi-search text-slate-400" style="font-size: 3rem;"></i>
                        <h4 class="mt-3 text-slate-900">開始搜尋個案</h4>
                        <p class="text-slate-600">請在上方輸入框中輸入個案編號、姓名或電話號碼</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            const searchInput = document.getElementById('searchInput');
            const searchResults = document.getElementById('searchResults');
            const resultsList = document.getElementById('resultsList');
            const resultCount = document.getElementById('resultCount');
            const noResults = document.getElementById('noResults');
            const initialPrompt = document.getElementById('initialPrompt');
            const searchLoading = document.getElementById('searchLoading');

            let searchTimeout;

            searchInput.addEventListener('input', function() {
                const query = this.value.trim();

                // 清除之前的延遲
                clearTimeout(searchTimeout);

                // 如果輸入為空，顯示初始提示
                if (query === '') {
                    hideAll();
                    initialPrompt.classList.remove('hidden');
                    return;
                }

                // 顯示載入中
                searchLoading.classList.remove('hidden');

                // 設定延遲搜尋（防抖，500ms）
                searchTimeout = setTimeout(async function() {
                    try {
                        const response = await fetch(`/Case/SearchCases?query=${encodeURIComponent(query)}`);
                        const data = await response.json();

                        searchLoading.classList.add('hidden');

                        if (data.success && data.cases && data.cases.length > 0) {
                            displayResults(data.cases);
                        } else {
                            hideAll();
                            noResults.classList.remove('hidden');
                        }
                    } catch (error) {
                        console.error('搜尋失敗:', error);
                        searchLoading.classList.add('hidden');
                        hideAll();
                        alert('搜尋時發生錯誤，請稍後再試');
                    }
                }, 500);
            });

            function displayResults(cases) {
                hideAll();
                searchResults.classList.remove('hidden');
                
                resultCount.textContent = `找到 ${cases.length} 筆個案`;

                resultsList.innerHTML = cases.map(caseItem => `
                    <div class="border border-border rounded-lg p-4 hover:bg-slate-50 transition-colors">
                        <div class="flex justify-between items-start">
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-2">
                                    <h5 class="text-lg font-semibold text-slate-900">${escapeHtml(caseItem.name)}</h5>
                                    <code class="text-sm text-slate-600 bg-slate-100 px-2 py-1 rounded">${escapeHtml(caseItem.caseId)}</code>
                                </div>
                                <div class="grid grid-cols-2 md:grid-cols-4 gap-2 text-sm text-slate-600">
                                    ${caseItem.phone ? `<div><i class="bi bi-telephone me-1"></i>${escapeHtml(caseItem.phone)}</div>` : ''}
                                    ${caseItem.birthDate ? `<div><i class="bi bi-calendar me-1"></i>${escapeHtml(caseItem.birthDate)}</div>` : ''}
                                    ${caseItem.city ? `<div><i class="bi bi-geo-alt me-1"></i>${escapeHtml(caseItem.city)}${caseItem.district ? ' / ' + escapeHtml(caseItem.district) : ''}</div>` : ''}
                                    ${caseItem.school ? `<div><i class="bi bi-building me-1"></i>${escapeHtml(caseItem.school)}</div>` : ''}
                                </div>
                            </div>
                            <div class="ml-4">
                                <a href="/CaseWizardOpenCase/Step1?caseId=${escapeHtml(caseItem.caseId)}" 
                                   class="btn">
                                    <i class="bi bi-pencil me-1"></i>寫開案記錄
                                </a>
                            </div>
                        </div>
                    </div>
                `).join('');
            }

            function hideAll() {
                searchResults.classList.add('hidden');
                noResults.classList.add('hidden');
                initialPrompt.classList.add('hidden');
            }

            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // 初始聚焦到搜尋框
            searchInput.focus();
        })();
    </script>
}

