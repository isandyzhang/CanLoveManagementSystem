@section Scripts {
    <script>
        // 啟用 Bootstrap Tooltip
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        // 個案詳細資料彈出視窗功能
        function showCaseDetails(caseId) {
            // 重置視窗狀態
            document.getElementById('caseDetailsLoading').classList.remove('d-none');
            document.getElementById('caseDetailsError').classList.add('d-none');
            document.getElementById('caseDetailsContent').classList.add('d-none');
            
            // 更新標題
            document.getElementById('caseDetailsModalLabel').innerHTML = 
                '<i class="bi bi-person-lines-fill me-2"></i>個案詳細資料 - ' + caseId;
            
            // 顯示彈出視窗
            var modal = new bootstrap.Modal(document.getElementById('caseDetailsModal'));
            modal.show();
            
            // 載入個案資料
            fetch('/Case/ViewDetails?caseId=' + encodeURIComponent(caseId))
                .then(response => response.json())
                .then(data => {
                    document.getElementById('caseDetailsLoading').classList.add('d-none');
                    
                    if (data.success) {
                        // 顯示資料
                        populateCaseDetails(data.data);
                        document.getElementById('caseDetailsContent').classList.remove('d-none');
                    } else {
                        // 顯示錯誤
                        document.getElementById('caseDetailsErrorMessage').textContent = data.message;
                        document.getElementById('caseDetailsError').classList.remove('d-none');
                    }
                })
                .catch(error => {
                    document.getElementById('caseDetailsLoading').classList.add('d-none');
                    document.getElementById('caseDetailsErrorMessage').textContent = '載入資料時發生錯誤：' + error.message;
                    document.getElementById('caseDetailsError').classList.remove('d-none');
                });
        }
        
        // 刪除個案功能
        function deleteCase(caseId, caseName) {
            // 建立確認對話框
            var confirmMessage = '確定要刪除個案「' + caseName + '」嗎？\n\n' +
                                '⚠️ 注意：此操作將執行軟刪除，個案資料將被標記為已刪除，但不會從資料庫中移除。\n\n' +
                                '個案編號：' + caseId;
            
            if (confirm(confirmMessage)) {
                // 顯示載入狀態
                var deleteButton = event.target;
                var originalText = deleteButton.textContent;
                deleteButton.textContent = '刪除中...';
                deleteButton.style.pointerEvents = 'none';
                deleteButton.style.opacity = '0.6';
                
                // 執行 AJAX 刪除
                fetch('/Case/Delete/' + encodeURIComponent(caseId), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    // 檢查回應是否成功
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    
                    // 檢查 Content-Type 是否為 JSON
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        return response.json();
                    } else {
                        // 如果不是 JSON，可能是重定向或其他回應
                        throw new Error('伺服器回應格式不正確');
                    }
                })
                .then(data => {
                    if (data.success) {
                        // 刪除成功，顯示成功訊息並重新載入頁面
                        alert('✅ ' + data.message);
                        location.reload();
                    } else {
                        throw new Error(data.message || '刪除失敗');
                    }
                })
                .catch(error => {
                    // 恢復按鈕狀態
                    deleteButton.textContent = originalText;
                    deleteButton.style.pointerEvents = 'auto';
                    deleteButton.style.opacity = '1';
                    
                    alert('刪除個案時發生錯誤：' + error.message);
                });
            }
        }
        
        // 填入個案詳細資料
        function populateCaseDetails(data) {
            // 基本資料
            document.getElementById('detailName').textContent = data.name || '-';
            
            // 性別顯示轉換
            var genderDisplay = '-';
            if (data.gender) {
                switch(data.gender.toLowerCase()) {
                    case 'm':
                    case 'male':
                    case '男':
                        genderDisplay = '男';
                        break;
                    case 'f':
                    case 'female':
                    case '女':
                        genderDisplay = '女';
                        break;
                    default:
                        genderDisplay = data.gender;
                }
            }
            document.getElementById('detailGender').textContent = genderDisplay;
            document.getElementById('detailBirthDate').textContent = data.birthDate || '-';
            document.getElementById('detailIdNumber').textContent = data.idNumber || '-';
            document.getElementById('detailPhone').textContent = data.phone || '-';
            document.getElementById('detailEmail').textContent = data.email || '-';
            
            // 地址格式：縣市 + 區域 + 地址
            var fullAddress = '';
            if (data.cityName) fullAddress += data.cityName;
            if (data.districtName) fullAddress += (fullAddress ? ' ' : '') + data.districtName;
            if (data.address) fullAddress += (fullAddress ? ' ' : '') + data.address;
            document.getElementById('detailAddress').textContent = fullAddress || '-';
            
            document.getElementById('detailCity').textContent = data.cityName || '-';
            document.getElementById('detailDistrict').textContent = data.districtName || '-';
            document.getElementById('detailSchool').textContent = data.schoolName || '-';
            
            // 聯絡人資料
            document.getElementById('detailContactName').textContent = data.contactName || '-';
            document.getElementById('detailContactRelation').textContent = data.contactRelation || '-';
            document.getElementById('detailContactPhone').textContent = data.contactPhone || '-';
            document.getElementById('detailHomePhone').textContent = data.homePhone || '-';
            
            // 扶養人資料
            document.getElementById('detailMainCaregiverName').textContent = data.mainCaregiverName || '-';
            document.getElementById('detailMainCaregiverRelation').textContent = data.mainCaregiverRelation || '-';
            document.getElementById('detailMainCaregiverJob').textContent = data.mainCaregiverJob || '-';
            document.getElementById('detailMainCaregiverBirth').textContent = data.mainCaregiverBirth || '-';
            document.getElementById('detailMainCaregiverEdu').textContent = data.mainCaregiverEdu || '-';
            document.getElementById('detailMainCaregiverMarryStatus').textContent = data.mainCaregiverMarryStatus || '-';
            
            // 家庭結構
            var familyStructure = data.familyStructure || '-';
            if (data.familyStructureOther) {
                familyStructure += ' (' + data.familyStructureOther + ')';
            }
            document.getElementById('detailFamilyStructure').textContent = familyStructure;
            
            // 經濟狀況
            document.getElementById('detailMonthlyIncome').textContent = data.monthlyIncome ? '$' + data.monthlyIncome.toLocaleString() : '-';
            document.getElementById('detailMonthlyExpense').textContent = data.monthlyExpense ? '$' + data.monthlyExpense.toLocaleString() : '-';
            document.getElementById('detailEconomicOverview').textContent = data.economicOverview || '-';
            document.getElementById('detailWorkSituation').textContent = data.workSituation || '-';
            
            // 評估分數
            var eqScore = '-';
            if (data.eqTotal !== null && data.eqCount > 0) {
                eqScore = data.eqTotal + ' 分 (共 ' + data.eqCount + ' 題)';
            }
            document.getElementById('detailEqScore').textContent = eqScore;
            
            var hqScore = '-';
            if (data.hqAverage !== null && data.hqCount > 0) {
                hqScore = data.hqAverage + ' 分 (平均，共 ' + data.hqCount + ' 項)';
            }
            document.getElementById('detailHqScore').textContent = hqScore;
            
            document.getElementById('detailAcademicPerformance').textContent = data.academicPerformance || '-';
            
            // 審核狀態
            var draftStatus = '-';
            if (data.draftStatus === true) {
                draftStatus = '<span class="badge bg-warning">草稿</span>';
            } else if (data.draftStatus === false) {
                draftStatus = '<span class="badge bg-success">已提交</span>';
            }
            document.getElementById('detailDraftStatus').innerHTML = draftStatus;
            
            var lockStatus = '-';
            if (data.isLocked === true) {
                lockStatus = '<span class="badge bg-danger">已鎖定</span> 由 ' + (data.lockedBy || '未知') + ' 於 ' + (data.lockedAt || '未知時間');
            } else {
                lockStatus = '<span class="badge bg-success">未鎖定</span>';
            }
            document.getElementById('detailLockStatus').innerHTML = lockStatus;
            
            document.getElementById('detailSubmittedBy').textContent = data.submittedBy || '-';
            document.getElementById('detailSubmittedAt').textContent = data.submittedAt || '-';
            document.getElementById('detailReviewedBy').textContent = data.reviewedBy || '-';
            document.getElementById('detailReviewedAt').textContent = data.reviewedAt || '-';
        }
    </script>
}
