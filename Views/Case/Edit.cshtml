@model CanLove_Backend.Data.Models.Core.Case

@{
    ViewData["Title"] = "編輯個案";
}

<div class="max-w-3xl mx-auto p-6">
    <h2 class="text-lg font-medium leading-tight mb-4">編輯個案</h2>
    <div class="card">
        <div class="px-6 py-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="mb-3 rounded-md border border-border bg-white text-red-600 p-4" role="alert"></div>
                <input type="hidden" asp-for="CaseId" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium mb-1"></label>
                        <input asp-for="Name" class="input" />
                        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Gender" class="block text-sm font-medium mb-1"></label>
                        <select asp-for="Gender" class="input">
                            <option value="">請選擇性別</option>
                            <option value="男">男</option>
                            <option value="女">女</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="BirthDate" class="block text-sm font-medium mb-1"></label>
                        <input asp-for="BirthDate" class="input" type="date" />
                        <span asp-validation-for="BirthDate" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="IdNumber" class="block text-sm font-medium mb-1"></label>
                        <input asp-for="IdNumber" class="input" />
                        <span asp-validation-for="IdNumber" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Phone" class="block text-sm font-medium mb-1"></label>
                        <input asp-for="Phone" class="input" />
                        <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium mb-1"></label>
                        <input asp-for="Email" class="input" />
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>
                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium mb-1"></label>
                        <textarea asp-for="Address" class="input" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="SchoolId" class="block text-sm font-medium mb-1"></label>
                        <select asp-for="SchoolId" class="input" asp-items="ViewBag.Schools">
                            <option value="">請選擇學校</option>
                        </select>
                        <span asp-validation-for="SchoolId" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="CityId" class="block text-sm font-medium mb-1"></label>
                        <select asp-for="CityId" class="input" asp-items="ViewBag.Cities">
                            <option value="">請選擇城市</option>
                        </select>
                        <span asp-validation-for="CityId" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="DistrictId" class="block text-sm font-medium mb-1"></label>
                        <select asp-for="DistrictId" class="input" asp-items="ViewBag.Districts">
                            <option value="">請選擇區域</option>
                        </select>
                        <span asp-validation-for="DistrictId" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div class="mt-6 flex justify-end gap-3">
                    <a asp-action="Index" class="btn btn--secondary">返回列表</a>
                    <input type="submit" value="儲存" class="btn" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
