@model CanLove_Backend.Application.ViewComponents.SelectCaseViewModel

<div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1400px] mx-auto">
        <div class="w-full">
            @{ ViewBag.CurrentPage = "Create"; ViewBag.CurrentTab = Model.TargetTab; }
            <partial name="~/Views/Shared/Partials/_CaseTabs.cshtml" />
            <div class="card bg-white dark:bg-slate-900 shadow-card-lg border rounded-xl @Model.BorderColor dark:border-slate-700 mt-3">
                <!-- 頂部色塊樣式 -->
                <div class="px-6 py-4 rounded-t-xl flex items-center justify-between @Model.BackgroundColor">
                    <span class="inline-flex items-center gap-3 text-2xl font-bold text-slate-700">
                        <i class="bi @Model.Icon"></i>
                        @Model.Title
                    </span>
                </div>
                <div class="px-6 py-6">
                    @await Component.InvokeAsync("SearchCase", new
                    {
                        mode = Model.Mode,
                        targetAction = Model.TargetAction,
                        targetController = Model.TargetController,
                        targetStep = Model.TargetStep,
                        autoLoad = Model.AutoLoad
                    })
                </div>
            </div>
        </div>
    </div>
</div>

