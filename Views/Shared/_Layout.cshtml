<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CanLove 個案管理系統</title>
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <script>
        // Tailwind CSS 官方推荐的深色模式初始化脚本
        (function() {
            try {
                const root = document.documentElement;
                const savedTheme = localStorage.getItem('theme');
                const systemPrefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                
                // 优先使用保存的主题，否则使用系统偏好
                const isDark = savedTheme 
                    ? savedTheme === 'dark' 
                    : systemPrefersDark;
                
                if (isDark) {
                    root.classList.add('dark');
                } else {
                    root.classList.remove('dark');
                }
            } catch (e) {
                // 如果出现错误（如 localStorage 不可用），默认使用浅色模式
                console.warn('主题初始化失败:', e);
            }
        })();
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- Flatpickr 日期選擇器 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_blue.css">
    <style>
        /* 強制日期輸入欄位顯示 yyyy-MM-dd 格式 */
        input[type="date"] {
            direction: ltr;
        }
    </style>
    <script>
        // 頁面載入時自動初始化 Flatpickr
        document.addEventListener('DOMContentLoaded', function() {
            // 初始化所有日期輸入欄位為 Flatpickr
            const dateInputs = document.querySelectorAll('input[type="date"]');
            dateInputs.forEach(function(input) {
                flatpickr(input, {
                    locale: "zh_tw",  // 中文介面
                    dateFormat: "Y/m/d",  // 台灣格式 yyyy/MM/dd
                    allowInput: true,  // 允許手動輸入
                    clickOpens: true,  // 點擊開啟
                    onChange: function(selectedDates, dateStr, instance) {
                        // 日期變更時的回調
                        const displayElement = input.nextElementSibling;
                        if (displayElement && displayElement.classList.contains('form-text')) {
                            displayElement.textContent = `目前選擇：${dateStr}`;
                        }
                    }
                });
            });
        });
    </script>
    </head>
<body>
    <div class="min-h-screen grid grid-cols-[320px_1fr] bg-white dark:bg-slate-950">
        <aside class="border-r border-border bg-white dark:bg-slate-900 dark:border-slate-800">
            @await Html.PartialAsync("_Sidebar")
        </aside>
        <div class="flex flex-col min-h-screen bg-slate-50 dark:bg-slate-950">
            @await Html.PartialAsync("_Topbar")
            @await Html.PartialAsync("_Breadcrumb")
            <main role="main" class="flex-1 p-6">
            @{
                // 顯示 TempData 訊息（成功、錯誤、警告、資訊）
                if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null || TempData["WarningMessage"] != null || TempData["InfoMessage"] != null)
                {
                    <partial name="~/Views/Shared/Partials/_AlertMessage.cshtml" />
                }
            }
            
            @try
            {
                @RenderBody()
            }
            catch (Exception ex)
            {
                <div class="bg-red-600 text-white p-5 m-5">
                    <h2>視圖渲染錯誤</h2>
                    <p>錯誤訊息: @ex.Message</p>
                    <pre class="bg-slate-900 text-white p-2.5 overflow-auto">@ex.StackTrace</pre>
                </div>
            }
            </main>
            <footer class="border-t border-border dark:border-slate-800 text-muted dark:text-slate-400 p-4 text-sm">
                <div class="max-w-7xl mx-auto flex items-center justify-between">
                    <div>&copy; 2025 - CanLove 個案管理系統</div>
                    <div class="text-end"><small>版本 1.0.0</small></div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Flatpickr 日期選擇器 -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/zh-tw.js"></script>
    <!-- 防止重複提交 -->
    <script src="~/js/form-submit-handler.js" asp-append-version="true"></script>
    <!-- 表單通知功能 -->
    <script src="~/js/form-notification.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
