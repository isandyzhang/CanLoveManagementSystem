<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CanLove 個案管理系統</title>
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <script>
        (function() {
            try {
                var saved = localStorage.getItem('theme');
                var systemDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                var isDark = saved ? saved === 'dark' : systemDark;
                var root = document.documentElement;
                if (isDark) { root.classList.add('dark'); } else { root.classList.remove('dark'); }
            } catch (e) { /* noop */ }
        })();
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- Flatpickr 日期選擇器 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_blue.css">
    <style>
        /* 強制日期輸入欄位顯示 yyyy-MM-dd 格式 */
        input[type="date"] {
            direction: ltr;
        }
    </style>
    <script>
        // 頁面載入時自動初始化 Flatpickr
        document.addEventListener('DOMContentLoaded', function() {
            // 初始化所有日期輸入欄位為 Flatpickr
            const dateInputs = document.querySelectorAll('input[type="date"]');
            dateInputs.forEach(function(input) {
                flatpickr(input, {
                    locale: "zh_tw",  // 中文介面
                    dateFormat: "Y/m/d",  // 台灣格式 yyyy/MM/dd
                    allowInput: true,  // 允許手動輸入
                    clickOpens: true,  // 點擊開啟
                    onChange: function(selectedDates, dateStr, instance) {
                        // 日期變更時的回調
                        const displayElement = input.nextElementSibling;
                        if (displayElement && displayElement.classList.contains('form-text')) {
                            displayElement.textContent = `目前選擇：${dateStr}`;
                        }
                    }
                });
            });
        });
    </script>
    </head>
<body>
    <div class="min-h-screen grid bg-white" style="grid-template-columns: 320px 1fr;">
        <aside class="border-r border-border bg-white">
            @await Html.PartialAsync("_Sidebar")
        </aside>
        <div class="flex flex-col min-h-screen bg-slate-50">
            @await Html.PartialAsync("_Topbar")
            <main role="main" class="flex-1 p-6">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-3 rounded-md border border-border bg-white shadow-sm" role="alert">
                    <div class="flex items-center justify-between px-4 py-3">
                        <div class="flex items-center gap-2 text-primary">
                            <i class="bi bi-check-circle"></i>
                            <span>@TempData["SuccessMessage"]</span>
                        </div>
                        <button type="button" aria-label="Close" class="p-2 rounded-md hover:bg-muted" onclick="this.closest('div[role=\\'alert\\']').remove()">
                            <i class="bi bi-x"></i>
                        </button>
                    </div>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-3 rounded-md border border-border bg-white shadow-sm" role="alert">
                    <div class="flex items-center justify-between px-4 py-3">
                        <div class="flex items-center gap-2 text-red-600">
                            <i class="bi bi-exclamation-triangle"></i>
                            <span>@TempData["ErrorMessage"]</span>
                        </div>
                        <button type="button" aria-label="Close" class="p-2 rounded-md hover:bg-muted" onclick="this.closest('div[role=\\'alert\\']').remove()">
                            <i class="bi bi-x"></i>
                        </button>
                    </div>
                </div>
            }
            
            @RenderBody()
            </main>
            <footer class="border-t text-muted p-4 text-sm">
                <div class="max-w-7xl mx-auto flex items-center justify-between">
                    <div>&copy; 2025 - CanLove 個案管理系統</div>
                    <div class="text-end"><small>版本 1.0.0</small></div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Flatpickr 日期選擇器 -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/zh-tw.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
