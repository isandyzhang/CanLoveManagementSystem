@model List<CanLove_Backend.Domain.Staff.ViewModels.StaffListItemViewModel>
@{
    ViewData["Title"] = "員工管理";
}

<div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1400px] mx-auto">
        <div class="card bg-white dark:bg-slate-900 rounded-xl shadow-card-lg border border-border dark:border-slate-800">
            <div class="p-4 bg-white dark:bg-slate-900 text-slate-900 dark:text-slate-100">
                <h2 class="text-xl font-semibold mb-4 text-slate-900 dark:text-slate-100">員工管理</h2>
                <div class="overflow-x-auto">
                    <table class="data-table text-left w-full text-slate-900 dark:text-slate-100">
                        <thead>
                            <tr class="bg-slate-50 dark:bg-slate-800">
                                <th class="text-slate-700 dark:text-slate-300">姓名</th>
                                <th class="text-slate-700 dark:text-slate-300">部門</th>
                                <th class="text-slate-700 dark:text-slate-300">職稱</th>
                                <th class="text-slate-700 dark:text-slate-300">上次登入</th>
                                <th class="text-slate-700 dark:text-slate-300"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                <tr class="border-b border-border dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-800">
                                    <td class="text-slate-900 dark:text-slate-100">@s.DisplayName</td>
                                    <td class="text-slate-900 dark:text-slate-100">@s.DepartmentName</td>
                                    <td class="text-slate-900 dark:text-slate-100">@s.JobTitleName</td>
                                    <td class="text-slate-900 dark:text-slate-100">@(s.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                    <td class="text-right">
                                        <a class="text-primary dark:text-primary-400 hover:text-primary-600 dark:hover:text-primary-300 transition-colors" href="@Url.Action("Edit", "Staff", new { id = s.StaffId })">編輯</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
