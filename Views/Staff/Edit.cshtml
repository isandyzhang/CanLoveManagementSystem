@model CanLove_Backend.Domain.Staff.ViewModels.StaffEditViewModel
@{
    ViewData["Title"] = "編輯員工";
}

<div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1400px] mx-auto">
        <div class="card bg-white dark:bg-slate-900 rounded-xl shadow-card-lg border border-border dark:border-slate-800">
            <div class="px-6 py-6">
                <h2 class="text-xl font-semibold mb-4 text-slate-900 dark:text-slate-100">編輯員工</h2>
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="StaffId" />
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">姓名</label>
                        <input class="input bg-slate-100 dark:bg-slate-800 text-slate-900 dark:text-slate-100" value="@Model.DisplayName" readonly />
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">部門</label>
                        <select name="DepartmentCode" class="input">
                            <option value="">-- 請選擇 --</option>
                            @foreach (var opt in Model.DepartmentOptions)
                            {
                                <option value="@opt.ValueCode" selected="@(Model.DepartmentCode == opt.ValueCode)">@opt.ValueName</option>
                            }
                        </select>
                    </div>
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">職稱</label>
                        <select name="JobTitleCode" class="input">
                            <option value="">-- 請選擇 --</option>
                            @foreach (var opt in Model.JobTitleOptions)
                            {
                                <option value="@opt.ValueCode" selected="@(Model.JobTitleCode == opt.ValueCode)">@opt.ValueName</option>
                            }
                        </select>
                    </div>
                    <div class="flex gap-3">
                        <button type="submit" class="btn">儲存</button>
                        <a href="@Url.Action("Index", "Staff")" class="btn btn--secondary">取消</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
