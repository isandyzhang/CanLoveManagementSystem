@model CanLove_Backend.Models.Mvc.ViewModels.CaseWizardOpenCase.CaseWizard_S4_CHQHS_ViewModel

@{
    ViewData["Title"] = "開案記錄表";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Breadcrumbs"] = new List<(string Text, string Url)>
    {
        ("個案管理", Url.Action("Index", "Case") ?? string.Empty),
        ("新增個案", Url.Action("Create", "Case") ?? string.Empty),
        ("開案記錄表", string.Empty)
    };
}

<div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1400px] mx-auto">
        <div class="w-full">
            @{ ViewBag.CurrentPage = "Create"; ViewBag.CurrentTab = "CaseOpening"; }
            <partial name="~/Views/Case/Partials/_CaseTabs.cshtml" />


            @{
                ViewBag.CurrentStep = 4;
                ViewBag.CaseId = Model.CaseId;
            }
            
            <!-- 導航分頁和進度條 -->
            @await Html.PartialAsync("~/Views/CaseWizardOpenCase/_WizardNavigation.cshtml")

            <!-- 表單 -->
            <form asp-action="Step4" method="post" class="needs-validation" novalidate>
                <div class="card bg-white dark:bg-white rounded-xl shadow-card-lg border rounded-xl border-[#FDBA74]">
                    <div class="px-6 py-4 mb-5 flex items-center justify-between bg-[#FFF1E6] rounded-t-xl">
                        <span class="inline-flex items-center gap-3 text-2xl font-bold text-slate-800">
                            <i class="bi bi-card-text"></i>
                            健康狀況評估
                        </span>
                    </div>
                    <div class="px-6 py-6">
                                <!-- 隱藏欄位 -->
                                <input asp-for="CaseId" type="hidden" />
                                <input asp-for="CaregiverId" type="hidden" />

                                <!-- 照顧者基本資訊 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-b border-border pb-2 mb-3">
                                            <i class="fas fa-user me-2"></i>照顧者基本資訊
                                        </h6>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label asp-for="CaregiverRoleValueId" class="block text-lg font-medium mb-2 text-slate-900">照顧者角色 <small class="block text-slate-500">caregiver_role_value_id（必填，外鍵 OptionSetValues.value_id）</small></label>
                                            <select asp-for="CaregiverRoleValueId" class="input" required>
                                                <option value="">請選擇照顧者角色</option>
                                                @if (Model.CaregiverRoleOptions != null)
                                                {
                                                    @foreach (var option in Model.CaregiverRoleOptions)
                                                    {
                                                        <option value="@option.OptionValueId">@option.ValueName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="CaregiverRoleValueId" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="CaregiverName" class="block text-lg font-medium mb-2 text-slate-900">照顧者姓名 <small class="block text-slate-500">caregiver_name（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="CaregiverName" class="input" placeholder="請輸入照顧者姓名" />
                                            <span asp-validation-for="CaregiverName" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="IsPrimary" class="block text-lg font-medium mb-2 text-slate-900">是否主要照顧者 <small class="block text-slate-500">is_primary（可空，BIT）</small></label>
                                            <select asp-for="IsPrimary" class="input">
                                                <option value="">請選擇</option>
                                                <option value="true">是</option>
                                                <option value="false">否</option>
                                            </select>
                                            <span asp-validation-for="IsPrimary" class="text-red-600 text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 照顧者健康評估 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-b border-border pb-2 mb-3">
                                            <i class="fas fa-user-md me-2"></i>照顧者健康評估
                                        </h6>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label asp-for="EmotionalExpressionRating" class="block text-lg font-medium mb-2 text-slate-900">情緒表現分數 <small class="block text-slate-500">emotional_expression_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="EmotionalExpressionRating" class="input">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常不穩定</option>
                                                <option value="2">2分 - 不穩定</option>
                                                <option value="3">3分 - 穩定</option>
                                                <option value="4">4分 - 非常穩定</option>
                                            </select>
                                            <span asp-validation-for="EmotionalExpressionRating" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="EmotionalExpressionNote" class="block text-lg font-medium mb-2 text-slate-900">情緒表現說明 <small class="block text-slate-500">emotional_expression_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="EmotionalExpressionNote" class="input" placeholder="請輸入情緒表現說明" />
                                            <span asp-validation-for="EmotionalExpressionNote" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="HealthStatusRating" class="block text-lg font-medium mb-2 text-slate-900">身體健康分數 <small class="block text-slate-500">health_status_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="HealthStatusRating" class="input">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常差</option>
                                                <option value="2">2分 - 差</option>
                                                <option value="3">3分 - 好</option>
                                                <option value="4">4分 - 非常好</option>
                                            </select>
                                            <span asp-validation-for="HealthStatusRating" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="HealthStatusNote" class="block text-lg font-medium mb-2 text-slate-900">身體健康說明 <small class="block text-slate-500">health_status_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="HealthStatusNote" class="input" placeholder="請輸入身體健康說明" />
                                            <span asp-validation-for="HealthStatusNote" class="text-red-600 text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 兒少健康評估 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-b border-border pb-2 mb-3">
                                            <i class="fas fa-child me-2"></i>兒少健康評估
                                        </h6>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label asp-for="ChildHealthStatusRating" class="block text-lg font-medium mb-2 text-slate-900">兒少健康狀態分數 <small class="block text-slate-500">child_health_status_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="ChildHealthStatusRating" class="input">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常差</option>
                                                <option value="2">2分 - 差</option>
                                                <option value="3">3分 - 好</option>
                                                <option value="4">4分 - 非常好</option>
                                            </select>
                                            <span asp-validation-for="ChildHealthStatusRating" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="ChildHealthStatusNote" class="block text-lg font-medium mb-2 text-slate-900">兒少健康狀態說明 <small class="block text-slate-500">child_health_status_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="ChildHealthStatusNote" class="input" placeholder="請輸入兒少健康狀態說明" />
                                            <span asp-validation-for="ChildHealthStatusNote" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="ChildCareStatusRating" class="block text-lg font-medium mb-2 text-slate-900">兒少受照顧狀態分數 <small class="block text-slate-500">child_care_status_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="ChildCareStatusRating" class="input">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常差</option>
                                                <option value="2">2分 - 差</option>
                                                <option value="3">3分 - 好</option>
                                                <option value="4">4分 - 非常好</option>
                                            </select>
                                            <span asp-validation-for="ChildCareStatusRating" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="ChildCareStatusNote" class="block text-lg font-medium mb-2 text-slate-900">兒少受照顧狀態說明 <small class="block text-slate-500">child_care_status_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="ChildCareStatusNote" class="input" placeholder="請輸入兒少受照顧狀態說明" />
                                            <span asp-validation-for="ChildCareStatusNote" class="text-red-600 text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <partial name="~/Views/CaseWizardOpenCase/Partials/_CaseWizardFormActions.cshtml" model="Model" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 表單驗證
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
