@model CanLove_Backend.Models.Mvc.ViewModels.CaseWizardOpenCase.CaseWizard_S3_CFQES_ViewModel

@{
    ViewData["Title"] = "開案記錄表";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Breadcrumbs"] = new List<(string Text, string Url)>
    {
        ("個案管理", Url.Action("Index", "Case") ?? string.Empty),
        ("新增個案", Url.Action("Create", "Case") ?? string.Empty),
        ("開案記錄表", string.Empty)
    };
}

<div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1400px] mx-auto">
        <div class="w-full">
            @{ ViewBag.CurrentPage = "Create"; ViewBag.CurrentTab = "CaseOpening"; }
            <partial name="~/Views/Case/Partials/_CaseTabs.cshtml" />


            @{
                ViewBag.CurrentStep = 3;
                ViewBag.CaseId = Model.CaseId;
            }
            
            <!-- 導航分頁和進度條 -->
            @await Html.PartialAsync("~/Views/CaseWizardOpenCase/_WizardNavigation.cshtml")

            <!-- 表單 -->
            <form asp-action="Step3" method="post" class="needs-validation" novalidate>
                <div class="card bg-white dark:bg-white rounded-xl shadow-card-lg border rounded-xl border-[#FDBA74]">
                    <div class="px-6 py-4 mb-5 flex items-center justify-between bg-[#FFF1E6] rounded-t-xl">
                        <span class="inline-flex items-center gap-3 text-2xl font-bold text-slate-800">
                            <i class="bi bi-card-text"></i>
                            經濟狀況評估
                        </span>
                    </div>
                    <div class="px-6 py-6">
                                <!-- 隱藏欄位 -->
                                <input asp-for="CaseId" type="hidden" />

                                <!-- 經濟概況 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-b border-border pb-2 mb-3">
                                            <i class="fas fa-info-circle me-2"></i>經濟概況
                                        </h6>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div class="md:col-span-2">
                                            <label asp-for="EconomicOverview" class="block text-lg font-medium mb-2 text-slate-900">家庭經濟概況描述 <small class="block text-slate-500">economic_overview（可空，NVARCHAR(200)）</small></label>
                                            <textarea asp-for="EconomicOverview" class="input" rows="3" placeholder="請描述家庭經濟概況"></textarea>
                                            <span asp-validation-for="EconomicOverview" class="text-red-600 text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 工作與福利資源 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-b border-border pb-2 mb-3">
                                            <i class="fas fa-briefcase me-2"></i>工作與福利資源
                                        </h6>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label asp-for="WorkSituation" class="block text-lg font-medium mb-2 text-slate-900">工作情形 <small class="block text-slate-500">work_situation（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="WorkSituation" class="input" placeholder="請描述工作情形" />
                                            <span asp-validation-for="WorkSituation" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="CivilWelfareResources" class="block text-lg font-medium mb-2 text-slate-900">民間福利資源 <small class="block text-slate-500">civil_welfare_resources（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="CivilWelfareResources" class="input" placeholder="請描述民間福利資源" />
                                            <span asp-validation-for="CivilWelfareResources" class="text-red-600 text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 收支狀況 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-b border-border pb-2 mb-3">
                                            <i class="fas fa-calculator me-2"></i>收支狀況
                                        </h6>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label asp-for="MonthlyIncome" class="block text-lg font-medium mb-2 text-slate-900">月收入 <small class="block text-slate-500">monthly_income（可空，DECIMAL(10,2)）</small></label>
                                            <div class="input-group">
                                                <span class="input-group-text">NT$</span>
                                                <input asp-for="MonthlyIncome" type="number" step="0.01" min="0" max="99999999.99" class="input" placeholder="請輸入月收入" />
                                            </div>
                                            <span asp-validation-for="MonthlyIncome" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div>
                                            <label asp-for="MonthlyExpense" class="block text-lg font-medium mb-2 text-slate-900">月支出 <small class="block text-slate-500">monthly_expense（可空，DECIMAL(10,2)）</small></label>
                                            <div class="input-group">
                                                <span class="input-group-text">NT$</span>
                                                <input asp-for="MonthlyExpense" type="number" step="0.01" min="0" max="99999999.99" class="input" placeholder="請輸入月支出" />
                                            </div>
                                            <span asp-validation-for="MonthlyExpense" class="text-red-600 text-sm"></span>
                                        </div>
                                        <div class="md:col-span-2">
                                            <label asp-for="MonthlyExpenseNote" class="block text-lg font-medium mb-2 text-slate-900">月支出說明 <small class="block text-slate-500">monthly_expense_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="MonthlyExpenseNote" class="input" placeholder="請說明月支出的詳細項目" />
                                            <span asp-validation-for="MonthlyExpenseNote" class="text-red-600 text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 其他描述 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-b border-border pb-2 mb-3">
                                            <i class="fas fa-sticky-note me-2"></i>其他描述
                                        </h6>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label asp-for="Description" class="block text-lg font-medium mb-2 text-slate-900">描述 <small class="block text-slate-500">description（可空，NVARCHAR(50)）</small></label>
                                            <textarea asp-for="Description" class="input" rows="3" placeholder="請輸入其他相關描述"></textarea>
                                            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <partial name="~/Views/CaseWizardOpenCase/Partials/_CaseWizardFormActions.cshtml" model="Model" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 表單驗證
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // 金額格式化
        document.addEventListener('DOMContentLoaded', function() {
            const incomeInput = document.querySelector('input[name="MonthlyIncome"]');
            const expenseInput = document.querySelector('input[name="MonthlyExpense"]');
            
            [incomeInput, expenseInput].forEach(input => {
                if (input) {
                    input.addEventListener('blur', function() {
                        if (this.value) {
                            const value = parseFloat(this.value);
                            if (!isNaN(value)) {
                                this.value = value.toFixed(2);
                            }
                        }
                    });
                }
            });
        });
    </script>
}
