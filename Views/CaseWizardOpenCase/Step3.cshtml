@model CanLove_Backend.Models.Mvc.ViewModels.CaseWizardOpenCase.CaseWizard_S3_CFQES_ViewModel

@{
    ViewData["Title"] = "步驟3: 經濟狀況評估";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- 頁面標題 -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">@ViewData["Title"]</h2>
                    <p class="text-muted mb-0">填寫家庭經濟狀況評估資料</p>
                </div>
            </div>

            @{
                ViewBag.CurrentStep = 3;
                ViewBag.CaseId = Model.CaseId;
            }
            
            <!-- 導航分頁和進度條 -->
            @await Html.PartialAsync("_WizardNavigation")

            <!-- 表單 -->
            <form asp-action="Step3" method="post" class="needs-validation" novalidate>
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-chart-line me-2"></i>經濟狀況評估
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- 隱藏欄位 -->
                                <input asp-for="CaseId" type="hidden" />

                                <!-- 經濟概況 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-info-circle me-2"></i>經濟概況
                                        </h6>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label asp-for="EconomicOverview" class="form-label">家庭經濟概況描述 <small class="text-muted d-block">economic_overview（可空，NVARCHAR(50)）</small></label>
                                            <textarea asp-for="EconomicOverview" class="form-control" rows="3" placeholder="請描述家庭經濟概況"></textarea>
                                            <span asp-validation-for="EconomicOverview" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 工作與福利資源 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-briefcase me-2"></i>工作與福利資源
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="WorkSituation" class="form-label">工作情形 <small class="text-muted d-block">work_situation（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="WorkSituation" class="form-control" placeholder="請描述工作情形" />
                                            <span asp-validation-for="WorkSituation" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CivilWelfareResources" class="form-label">民間福利資源 <small class="text-muted d-block">civil_welfare_resources（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="CivilWelfareResources" class="form-control" placeholder="請描述民間福利資源" />
                                            <span asp-validation-for="CivilWelfareResources" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 收支狀況 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-calculator me-2"></i>收支狀況
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MonthlyIncome" class="form-label">月收入 <small class="text-muted d-block">monthly_income（可空，DECIMAL(10,2)）</small></label>
                                            <div class="input-group">
                                                <span class="input-group-text">NT$</span>
                                                <input asp-for="MonthlyIncome" type="number" step="0.01" min="0" max="99999999.99" class="form-control" placeholder="請輸入月收入" />
                                            </div>
                                            <span asp-validation-for="MonthlyIncome" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MonthlyExpense" class="form-label">月支出 <small class="text-muted d-block">monthly_expense（可空，DECIMAL(10,2)）</small></label>
                                            <div class="input-group">
                                                <span class="input-group-text">NT$</span>
                                                <input asp-for="MonthlyExpense" type="number" step="0.01" min="0" max="99999999.99" class="form-control" placeholder="請輸入月支出" />
                                            </div>
                                            <span asp-validation-for="MonthlyExpense" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label asp-for="MonthlyExpenseNote" class="form-label">月支出說明 <small class="text-muted d-block">monthly_expense_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="MonthlyExpenseNote" class="form-control" placeholder="請說明月支出的詳細項目" />
                                            <span asp-validation-for="MonthlyExpenseNote" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 其他描述 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-sticky-note me-2"></i>其他描述
                                        </h6>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label asp-for="Description" class="form-label">描述 <small class="text-muted d-block">description（可空，NVARCHAR(50)）</small></label>
                                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="請輸入其他相關描述"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 按鈕區域 -->
                                <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                                    <a asp-action="Step2" asp-route-caseId="@Model.CaseId" class="btn btn-outline-secondary me-md-2">
                                        <i class="fas fa-arrow-left me-1"></i>返回上一步
                                    </a>
                                    <div>
                                        <button type="submit" class="btn btn-primary me-md-2">
                                            <i class="fas fa-save me-1"></i>儲存並繼續
                                        </button>
                                        <a asp-controller="Case" asp-action="Index" class="btn btn-outline-danger">
                                            <i class="fas fa-times me-1"></i>取消
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 表單驗證
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // 金額格式化
        document.addEventListener('DOMContentLoaded', function() {
            const incomeInput = document.querySelector('input[name="MonthlyIncome"]');
            const expenseInput = document.querySelector('input[name="MonthlyExpense"]');
            
            [incomeInput, expenseInput].forEach(input => {
                if (input) {
                    input.addEventListener('blur', function() {
                        if (this.value) {
                            const value = parseFloat(this.value);
                            if (!isNaN(value)) {
                                this.value = value.toFixed(2);
                            }
                        }
                    });
                }
            });
        });
    </script>
}
