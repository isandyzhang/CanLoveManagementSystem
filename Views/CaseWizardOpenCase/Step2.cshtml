@model CanLove_Backend.Models.Mvc.ViewModels.CaseWizardOpenCase.CaseWizard_S2_CSWC_ViewModel

@{
    ViewData["Title"] = "步驟2: 社會工作服務內容";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- 頁面標題 -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">@ViewData["Title"]</h2>
                    <p class="text-muted mb-0">填寫社會工作服務內容評估資料</p>
                </div>
            </div>

            @{
                ViewBag.CurrentStep = 2;
                ViewBag.CaseId = Model.CaseId;
            }
            
            <!-- 導航分頁和進度條 -->
            @await Html.PartialAsync("_WizardNavigation")

            <!-- 表單 -->
            <form asp-action="Step2" method="post" class="needs-validation" novalidate>
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-users me-2"></i>社會工作服務內容評估
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- 隱藏欄位 -->
                                <input asp-for="CaseId" type="hidden" />

                                <!-- 家系圖與居住地 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-sitemap me-2"></i>家系圖與居住地
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FamilyTreeImg" class="form-label">家系圖圖片 <small class="text-muted d-block">family_tree_img（可空，NVARCHAR(250)）</small></label>
                                            <input asp-for="FamilyTreeImg" class="form-control" placeholder="請輸入家系圖圖片路徑" />
                                            <span asp-validation-for="FamilyTreeImg" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="ResidenceTypeValueId" class="form-label">居住地型態 <small class="text-muted d-block">residence_type_value_id（可空，外鍵 OptionSetValues.value_id）</small></label>
                                            <select asp-for="ResidenceTypeValueId" class="form-select">
                                                <option value="">請選擇居住地型態</option>
                                                @if (Model.ResidenceTypeOptions != null)
                                                {
                                                    @foreach (var option in Model.ResidenceTypeOptions)
                                                    {
                                                        <option value="@option.OptionValueId">@option.ValueName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="ResidenceTypeValueId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 居家環境評估 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-home me-2"></i>居家環境評估
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HouseCleanlinessRating" class="form-label">居家整潔分數 <small class="text-muted d-block">house_cleanliness_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="HouseCleanlinessRating" class="form-select">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常不整潔</option>
                                                <option value="2">2分 - 不整潔</option>
                                                <option value="3">3分 - 整潔</option>
                                                <option value="4">4分 - 非常整潔</option>
                                            </select>
                                            <span asp-validation-for="HouseCleanlinessRating" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HouseCleanlinessNote" class="form-label">居家整潔說明 <small class="text-muted d-block">house_cleanliness_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="HouseCleanlinessNote" class="form-control" placeholder="請輸入居家整潔說明" />
                                            <span asp-validation-for="HouseCleanlinessNote" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HouseSafetyRating" class="form-label">居家安全分數 <small class="text-muted d-block">house_safety_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="HouseSafetyRating" class="form-select">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常不安全</option>
                                                <option value="2">2分 - 不安全</option>
                                                <option value="3">3分 - 安全</option>
                                                <option value="4">4分 - 非常安全</option>
                                            </select>
                                            <span asp-validation-for="HouseSafetyRating" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HouseSafetyNote" class="form-label">居家安全說明 <small class="text-muted d-block">house_safety_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="HouseSafetyNote" class="form-control" placeholder="請輸入居家安全說明" />
                                            <span asp-validation-for="HouseSafetyNote" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 互動關係評估 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-heart me-2"></i>互動關係評估
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CaregiverChildInteractionRating" class="form-label">照顧者與兒少互動情形分數 <small class="text-muted d-block">caregiver_child_interaction_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="CaregiverChildInteractionRating" class="form-select">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常不好</option>
                                                <option value="2">2分 - 不好</option>
                                                <option value="3">3分 - 好</option>
                                                <option value="4">4分 - 非常好</option>
                                            </select>
                                            <span asp-validation-for="CaregiverChildInteractionRating" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CaregiverChildInteractionNote" class="form-label">照顧者與兒少互動情形說明 <small class="text-muted d-block">caregiver_child_interaction_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="CaregiverChildInteractionNote" class="form-control" placeholder="請輸入互動情形說明" />
                                            <span asp-validation-for="CaregiverChildInteractionNote" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CaregiverFamilyInteractionRating" class="form-label">照顧者與整體同住家人互動情形分數 <small class="text-muted d-block">caregiver_family_interaction_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="CaregiverFamilyInteractionRating" class="form-select">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常不好</option>
                                                <option value="2">2分 - 不好</option>
                                                <option value="3">3分 - 好</option>
                                                <option value="4">4分 - 非常好</option>
                                            </select>
                                            <span asp-validation-for="CaregiverFamilyInteractionRating" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="CaregiverFamilyInteractionNote" class="form-label">照顧者與整體同住家人互動情形說明 <small class="text-muted d-block">caregiver_family_interaction_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="CaregiverFamilyInteractionNote" class="form-control" placeholder="請輸入互動情形說明" />
                                            <span asp-validation-for="CaregiverFamilyInteractionNote" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 資源與支持評估 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-handshake me-2"></i>資源與支持評估
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FamilyResourceAbilityRating" class="form-label">家庭資源連結能力分數 <small class="text-muted d-block">family_resource_ability_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="FamilyResourceAbilityRating" class="form-select">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常差</option>
                                                <option value="2">2分 - 差</option>
                                                <option value="3">3分 - 好</option>
                                                <option value="4">4分 - 非常好</option>
                                            </select>
                                            <span asp-validation-for="FamilyResourceAbilityRating" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FamilyResourceAbilityNote" class="form-label">家庭資源連結能力說明 <small class="text-muted d-block">family_resource_ability_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="FamilyResourceAbilityNote" class="form-control" placeholder="請輸入資源連結能力說明" />
                                            <span asp-validation-for="FamilyResourceAbilityNote" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FamilySocialSupportRating" class="form-label">社會家庭支持獲得分數 <small class="text-muted d-block">family_social_support_rating（可空，TINYINT 1-4）</small></label>
                                            <select asp-for="FamilySocialSupportRating" class="form-select">
                                                <option value="">請選擇分數</option>
                                                <option value="1">1分 - 非常少</option>
                                                <option value="2">2分 - 少</option>
                                                <option value="3">3分 - 多</option>
                                                <option value="4">4分 - 非常多</option>
                                            </select>
                                            <span asp-validation-for="FamilySocialSupportRating" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FamilySocialSupportNote" class="form-label">社會家庭支持獲得說明 <small class="text-muted d-block">family_social_support_note（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="FamilySocialSupportNote" class="form-control" placeholder="請輸入社會支持說明" />
                                            <span asp-validation-for="FamilySocialSupportNote" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 特殊情形 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-exclamation-triangle me-2"></i>特殊情形
                                        </h6>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label asp-for="SpecialCircumstancesDescription" class="form-label">其他特殊情形描述 <small class="text-muted d-block">special_circumstances_description（可空，NVARCHAR(50)）</small></label>
                                            <input asp-for="SpecialCircumstancesDescription" class="form-control" placeholder="請描述其他特殊情形" />
                                            <span asp-validation-for="SpecialCircumstancesDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 按鈕區域 -->
                                <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                                    <a asp-action="Step1" asp-route-caseId="@Model.CaseId" class="btn btn-outline-secondary me-md-2">
                                        <i class="fas fa-arrow-left me-1"></i>返回上一步
                                    </a>
                                    <div>
                                        <button type="submit" class="btn btn-primary me-md-2">
                                            <i class="fas fa-save me-1"></i>儲存並繼續
                                        </button>
                                        <a asp-controller="Case" asp-action="Index" class="btn btn-outline-danger">
                                            <i class="fas fa-times me-1"></i>取消
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 表單驗證
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
