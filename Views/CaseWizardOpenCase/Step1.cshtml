@model CanLove_Backend.Models.Mvc.ViewModels.CaseWizardOpenCase.CaseWizard_S1_CD_ViewModel

@{
    ViewData["Title"] = "步驟1: 個案詳細資料";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- 頁面標題 -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">@ViewData["Title"]</h2>
                    <p class="text-muted mb-0">填寫個案的詳細聯絡資訊、家庭結構與背景資料</p>
                </div>
                <div class="text-end">
                    <small class="text-muted">步驟 1 / 8</small>
                </div>
            </div>

            <!-- 進度條 -->
            <div class="progress mb-4" style="height: 8px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 12.5%" aria-valuenow="12.5" aria-valuemin="0" aria-valuemax="100"></div>
            </div>

            <!-- 表單 -->
            <form asp-action="Step1" method="post" class="needs-validation" novalidate>
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-user-friends me-2"></i>個案詳細資料
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- 隱藏欄位 -->
                                <input asp-for="CaseId" type="hidden" />

                                <!-- 聯絡人資訊 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-phone me-2"></i>聯絡人資訊
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="ContactName" class="form-label">聯絡人姓名 <small class="text-muted d-block">contact_name（可空，NVARCHAR(20)）</small></label>
                                            <input asp-for="ContactName" class="form-control" placeholder="請輸入聯絡人姓名" />
                                            <span asp-validation-for="ContactName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="ContactRelationValueId" class="form-label">與案主關係 <small class="text-muted d-block">contact_relation_value_id（可空，外鍵 OptionSetValues.value_id）</small></label>
                                            <select asp-for="ContactRelationValueId" class="form-select">
                                                <option value="">請選擇關係</option>
                                                @if (Model.ContactRelationOptions != null)
                                                {
                                                    @foreach (var option in Model.ContactRelationOptions)
                                                    {
                                                        <option value="@option.OptionValueId">@option.ValueName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="ContactRelationValueId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="ContactPhone" class="form-label">聯絡人電話 <small class="text-muted d-block">contact_phone（可空，NVARCHAR(15)）</small></label>
                                            <input asp-for="ContactPhone" class="form-control" placeholder="請輸入聯絡人電話" />
                                            <span asp-validation-for="ContactPhone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HomePhone" class="form-label">住家電話 <small class="text-muted d-block">home_phone（可空，NVARCHAR(15)）</small></label>
                                            <input asp-for="HomePhone" class="form-control" placeholder="請輸入住家電話" />
                                            <span asp-validation-for="HomePhone" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 家庭結構 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-home me-2"></i>家庭結構
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FamilyStructureTypeId" class="form-label">家庭結構類型 <small class="text-muted d-block">family_structure_type_id（可空，外鍵 FamilyStructureTypes.family_structure_type_id）</small></label>
                                            <select asp-for="FamilyStructureTypeId" class="form-select" id="familyStructureSelect">
                                                <option value="">請選擇家庭結構類型</option>
                                                @if (Model.FamilyStructureTypeOptions != null)
                                                {
                                                    @foreach (var option in Model.FamilyStructureTypeOptions)
                                                    {
                                                        <option value="@option.StructureTypeId">@option.StructureName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="FamilyStructureTypeId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FamilyStructureOtherDesc" class="form-label">其他結構描述 <small class="text-muted d-block">family_structure_other_desc（可空，NVARCHAR(100)）</small></label>
                                            <input asp-for="FamilyStructureOtherDesc" class="form-control" placeholder="請描述其他家庭結構類型" />
                                            <span asp-validation-for="FamilyStructureOtherDesc" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 父母國籍 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-globe me-2"></i>父母國籍
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="ParentNationFatherId" class="form-label">父親國籍 <small class="text-muted d-block">parent_nation_father_id（可空，外鍵 Nationalities.nationality_id）</small></label>
                                            <select asp-for="ParentNationFatherId" class="form-select">
                                                <option value="">請選擇父親國籍</option>
                                                @if (Model.NationalityOptions != null)
                                                {
                                                    @foreach (var option in Model.NationalityOptions)
                                                    {
                                                        <option value="@option.NationalityId">@option.NationalityName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="ParentNationFatherId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="ParentNationMotherId" class="form-label">母親國籍 <small class="text-muted d-block">parent_nation_mother_id（可空，外鍵 Nationalities.nationality_id）</small></label>
                                            <select asp-for="ParentNationMotherId" class="form-select">
                                                <option value="">請選擇母親國籍</option>
                                                @if (Model.NationalityOptions != null)
                                                {
                                                    @foreach (var option in Model.NationalityOptions)
                                                    {
                                                        <option value="@option.NationalityId">@option.NationalityName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="ParentNationMotherId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 主要照顧者資訊 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-user-tie me-2"></i>主要照顧者資訊
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MainCaregiverName" class="form-label">主要照顧者姓名 <small class="text-muted d-block">main_caregiver_name（可空，NVARCHAR(20)）</small></label>
                                            <input asp-for="MainCaregiverName" class="form-control" placeholder="請輸入主要照顧者姓名" />
                                            <span asp-validation-for="MainCaregiverName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MainCaregiverRelationValueId" class="form-label">與案主關係 <small class="text-muted d-block">main_caregiver_relation_value_id（可空，INT）</small></label>
                                            <select asp-for="MainCaregiverRelationValueId" class="form-select" asp-items="@(new SelectList(Model.MainCaregiverRelationOptions, "OptionValueId", "ValueName", Model.MainCaregiverRelationValueId))">
                                                <option value="">請選擇與案主關係</option>
                                            </select>
                                            <span asp-validation-for="MainCaregiverRelationValueId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MainCaregiverId" class="form-label">身分證字號(加密) <small class="text-muted d-block">main_caregiver_id（可空，NVARCHAR(255)）</small></label>
                                            <input asp-for="MainCaregiverId" class="form-control" placeholder="請輸入身分證字號" />
                                            <span asp-validation-for="MainCaregiverId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MainCaregiverBirth" class="form-label">生日 <small class="text-muted d-block">main_caregiver_birth（可空，DATE）</small></label>
                                            <input asp-for="MainCaregiverBirth" type="date" class="form-control" />
                                            <span asp-validation-for="MainCaregiverBirth" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MainCaregiverJob" class="form-label">職業 <small class="text-muted d-block">main_caregiver_job（可空，NVARCHAR(30)）</small></label>
                                            <input asp-for="MainCaregiverJob" class="form-control" placeholder="請輸入職業" />
                                            <span asp-validation-for="MainCaregiverJob" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MainCaregiverMarryStatusValueId" class="form-label">婚姻狀況 <small class="text-muted d-block">main_caregiver_marry_status_value_id（可空，外鍵 OptionSetValues.value_id）</small></label>
                                            <select asp-for="MainCaregiverMarryStatusValueId" class="form-select">
                                                <option value="">請選擇婚姻狀況</option>
                                                @if (Model.MarryStatusOptions != null)
                                                {
                                                    @foreach (var option in Model.MarryStatusOptions)
                                                    {
                                                        <option value="@option.OptionValueId">@option.ValueName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="MainCaregiverMarryStatusValueId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MainCaregiverEduValueId" class="form-label">教育程度 <small class="text-muted d-block">main_caregiver_edu_value_id（可空，外鍵 OptionSetValues.value_id）</small></label>
                                            <select asp-for="MainCaregiverEduValueId" class="form-select">
                                                <option value="">請選擇教育程度</option>
                                                @if (Model.EducationLevelOptions != null)
                                                {
                                                    @foreach (var option in Model.EducationLevelOptions)
                                                    {
                                                        <option value="@option.OptionValueId">@option.ValueName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="MainCaregiverEduValueId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 個案來源與經驗 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-info-circle me-2"></i>個案來源與經驗
                                        </h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="SourceValueId" class="form-label">個案來源 <small class="text-muted d-block">source_value_id（可空，外鍵 OptionSetValues.value_id）</small></label>
                                            <select asp-for="SourceValueId" class="form-select">
                                                <option value="">請選擇個案來源</option>
                                                @if (Model.SourceOptions != null)
                                                {
                                                    @foreach (var option in Model.SourceOptions)
                                                    {
                                                        <option value="@option.OptionValueId">@option.ValueName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="SourceValueId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="HelpExperienceValueId" class="form-label">求助經驗 <small class="text-muted d-block">help_experience_value_id（可空，外鍵 OptionSetValues.value_id）</small></label>
                                            <select asp-for="HelpExperienceValueId" class="form-select">
                                                <option value="">請選擇求助經驗</option>
                                                @if (Model.HelpExperienceOptions != null)
                                                {
                                                    @foreach (var option in Model.HelpExperienceOptions)
                                                    {
                                                        <option value="@option.OptionValueId">@option.ValueName</option>
                                                    }
                                                }
                                            </select>
                                            <span asp-validation-for="HelpExperienceValueId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 備註 -->
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                            <i class="fas fa-sticky-note me-2"></i>備註
                                        </h6>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label asp-for="Note" class="form-label">備註 <small class="text-muted d-block">note（可空，NVARCHAR(1000)）</small></label>
                                            <textarea asp-for="Note" class="form-control" rows="4" placeholder="請輸入備註資訊"></textarea>
                                            <span asp-validation-for="Note" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- 按鈕區域 -->
                                <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                                    <a asp-action="Start" asp-route-caseId="@Model.CaseId" class="btn btn-outline-secondary me-md-2">
                                        <i class="fas fa-arrow-left me-1"></i>返回上一步
                                    </a>
                                    <div>
                                        <button type="submit" class="btn btn-primary me-md-2">
                                            <i class="fas fa-save me-1"></i>儲存並繼續
                                        </button>
                                        <a asp-controller="Case" asp-action="Index" class="btn btn-outline-danger">
                                            <i class="fas fa-times me-1"></i>取消
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 表單驗證
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // 家庭結構類型選擇時顯示/隱藏其他描述欄位
        document.getElementById('familyStructureSelect').addEventListener('change', function() {
            const otherDescField = document.querySelector('input[name="FamilyStructureOtherDesc"]');
            const otherDescContainer = otherDescField.closest('.col-md-6');
            
            if (this.value) {
                // 檢查是否選擇了"其他"選項（假設最後一個選項是"其他"）
                const selectedOption = this.options[this.selectedIndex];
                if (selectedOption.textContent.includes('其他') || selectedOption.textContent.includes('Other')) {
                    otherDescContainer.style.display = 'block';
                    otherDescField.required = true;
                } else {
                    otherDescContainer.style.display = 'block';
                    otherDescField.required = false;
                    otherDescField.value = '';
                }
            } else {
                otherDescContainer.style.display = 'none';
                otherDescField.required = false;
                otherDescField.value = '';
            }
        });

        // 初始化時檢查家庭結構類型
        document.addEventListener('DOMContentLoaded', function() {
            const familyStructureSelect = document.getElementById('familyStructureSelect');
            if (familyStructureSelect.value) {
                familyStructureSelect.dispatchEvent(new Event('change'));
            }
        });
    </script>
}
