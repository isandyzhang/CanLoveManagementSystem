@{
    ViewData["Title"] = "首頁";
}

<div class="text-center">
    <h1 class="display-4">CanLove 個案管理系統(home/index)</h1>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">個案管理</h5>
                <p class="card-text">管理個案基本資料、詳細資訊和相關記錄</p>
                <a href="@Url.Action("Index", "Case")" class="btn btn-primary">
                    <i class="bi bi-list me-1"></i>查看個案列表
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-plus-circle-fill text-success" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">新增個案</h5>
                <p class="card-text">建立新的個案記錄，開始個案管理流程</p>
                <a href="@Url.Action("Create", "Case")" class="btn btn-success">
                    <i class="bi bi-plus me-1"></i>新增個案
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-graph-up text-info" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">報表統計</h5>
                <p class="card-text">查看個案統計資料和分析報告</p>
                <a href="#" class="btn btn-info disabled">
                    <i class="bi bi-bar-chart me-1"></i>報表功能 (開發中)
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>系統資訊
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>系統狀態</h6>
                        <p class="text-success">
                            <i class="bi bi-check-circle me-1"></i>系統運行正常
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h6>資料庫連線</h6>
                        <p class="text-success">
                            <i class="bi bi-check-circle me-1"></i>連線正常
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
